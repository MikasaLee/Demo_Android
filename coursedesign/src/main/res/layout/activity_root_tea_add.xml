<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/admin_tea">

    <EditText
        android:id="@+id/edt_tea_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="教师姓名"
        android:textSize="30dp"/>

    <EditText
        android:id="@+id/edt_tea_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="教师编号"
        android:textSize="30sp"
        />

    <EditText
        android:id="@+id/edt_tea_college"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="所在学院"
        android:textSize="30sp"
        />

    <EditText
        android:id="@+id/edt_tea_grade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="教师职称"
        android:textSize="30sp"
        />
    <EditText
        android:id="@+id/edt_tea_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="教师密码"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/btn_tea_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="添加教师信息"
        android:textSize="30sp"
        android:width="100dp"/>
</LinearLayout>
